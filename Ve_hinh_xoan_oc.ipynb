    "count=0\n",
    "d=1\n",
    "while True:\n",
    "    pen.forward(d)\n",
    "    pen.right(27)\n",
    "    d=d+1\n",
    "    distance=t.distance(pen)\n",
    "    if distance>a:\n",
    "        break"
